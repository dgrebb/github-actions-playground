{
  "name": "javascript-action",
  "description": "GitHub Actions JavaScript Template",
  "version": "0.0.0",
  "author": "dgrebb",
  "private": true,
  "homepage": "https://github.com/dgrebb#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgrebb/github-actions-playground.git"
  },
  "bugs": {
    "url": "https://github.com/dgrebb/github-actions-playground"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "all": "pnpm fmt && pnpm lint && pnpm test && pnpm coverage && pnpm bundle",
    "bundle": "pnpm fmt && pnpm build",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "fmt": "prettier --write \"actions/**/*.js\" \"__tests__/**/*.js\"",
    "fmtcheck": "prettier --check \"actions/**/*.js\" \"__tests__/**/*.js\"",
    "lint": "pnpx eslint . -c ./.github/linters/.eslintrc.yml",
    "build": "pnpm -r build",
    "test": "npx jest",
    "act": "act -s GITHUB_TOKEN=$(pass github/act-pat) -W .github/workflows/build"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "./.github/linters/.eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/eslint-parser": "^7.24.8",
    "@babel/preset-env": "^7.24.8",
    "@vercel/ncc": "^0.38.1",
    "babel-preset-jest": "^29.6.3",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.6.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1"
  }
}
